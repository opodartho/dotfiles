#!/usr/bin/env bash

echo "Installing dotfiles"

echo "Initializing submodule(s)"
git submodule update --init --recursive

source recipes/package.sh
source recipes/link.sh

source recipes/zsh.sh
source recipes/nvim.sh

source recipes/font-patch.sh
source recipes/rbenv.sh
source recipes/nodejs.sh
source recipes/postgres.sh

source "${HOME}/.zshrc"
